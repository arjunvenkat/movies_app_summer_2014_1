<h1>Roles</h1>

<p><a href="/new_role">Add a New Role</a></p>

<table>
  <thead>
    <tr>
      <th>Actor</th>
      <th>Movie</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @roles.each do |role| %>
    <tr>
          <td><%= role.actor_id %></td>
          <td><%= role.movie_id %></td>
          <td><%= role.name %></td>
          <td><a href="/roles/<%= role.id %>">Show</a>
        </td>
      <td><a href="/roles/<%= role.id %>/edit">Edit</a></td>
      <td><a href="/roles/<%= role.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>

