<h1>Movies</h1>

<p><a href="/new_movie">Add a New Movie</a></p>

<table>
  <thead>
    <tr>
      <th>Director</th>
      <th>Title</th>
      <th>Image url</th>
      <th>Description</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @movies.each do |movie| %>
    <tr>
          <td><%= movie.director_id %></td>
          <td><%= movie.title %></td>
          <td><%= movie.image_url %></td>
          <td><%= movie.description %></td>
          <td><%= movie.date %></td>
          <td><a href="/movies/<%= movie.id %>">Show</a>
        </td>
      <td><a href="/movies/<%= movie.id %>/edit">Edit</a></td>
      <td><a href="/movies/<%= movie.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>

